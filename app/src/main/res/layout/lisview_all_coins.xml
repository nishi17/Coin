<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/cardView_RelLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border_create_flyer"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="@dimen/location_width"
                android:layout_height="@dimen/location_height"
                android:layout_marginLeft="13dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_name_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/card_dark_gray" />


                <TextView
                    android:id="@+id/tv_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/card_dark_gray" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLay_expired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_percent_change_24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="2dp"
                    android:ellipsize="end"
                    android:gravity="right|center"
                    android:lines="1"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/red"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/first"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:background="@color/border" />


        <LinearLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/second"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:lines="1"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="#5d3254"
                    android:textColorHint="@color/text" />


                <TextView
                    android:id="@+id/tv_market_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="left|top|center"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:lines="3"
                    android:maxLength="100"
                    android:maxLines="3"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColor="@color/card_dark_gray"
                    android:textColorHint="@color/text" />


            </LinearLayout>


            <CheckBox
                android:id="@+id/checkbox_meat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:onClick="onCheckboxClicked" />


        </LinearLayout>

        <ImageView
            android:id="@+id/fourth"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/third"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"

            android:background="@color/border" />

    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>